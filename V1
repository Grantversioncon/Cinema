        ];

        const ratingRange = document.getElementById("ratingRange");
        const ratingLabel = document.getElementById("ratingLabel");
        const genreSelect = document.getElementById("genreSelect");
        const moviesContainer = document.getElementById("moviesContainer");

        // Function to update displayed movies based on the slider's rating and selected genre
        function updateMovies() {
            const minRating = parseFloat(ratingRange.value);
            const selectedGenre = genreSelect.value;
            ratingLabel.textContent = minRating.toFixed(1);

            // Filter movies based on minimum rating and selected genre
            let filteredMovies = movieData.filter(movie => movie.vote_average >= minRating);

            if (selectedGenre !== 'All') {
                filteredMovies = filteredMovies.filter(movie => movie.genre === selectedGenre);
            }

            // Sort movies by the closest to the selected rating, then ascending
            filteredMovies.sort((a, b) => Math.abs(a.vote_average - minRating) - Math.abs(b.vote_average - minRating) || a.vote_average - b.vote_average);

            // Clear existing movies
            moviesContainer.innerHTML = '';

            if (filteredMovies.length === 0) {
                moviesContainer.innerHTML = '<div class="feedback">No movies found for the selected rating and genre.</div>';
            } else {
                // Loop through filtered movies and create cards
                filteredMovies.forEach(movie => {
                    const movieCard = document.createElement("div");
                    movieCard.classList.add("movie-card", `genre-${movie.genre.replace(/\s+/g, '-')}`);

                    movieCard.innerHTML = `
                        <div class="movie-title">${movie.title}</div>
                        <div class="movie-rating">Rating: ${movie.vote_average.toFixed(1)}</div>
                    `;

                    // Append the movie card to the container
                    moviesContainer.appendChild(movieCard);
                });
            }
        }

        // Initialize movie list on page load
        updateMovies();

        // Update movies when the slider value or genre selection changes
        ratingRange.addEventListener("input", updateMovies);
        genreSelect.addEventListener("change", updateMovies);
    </script>
</body>
</html>
